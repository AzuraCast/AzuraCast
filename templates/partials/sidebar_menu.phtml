                                   if ($item['external'] ?? false): ?>target="_blank"<?php
                                endif; ?>
                                   <?php
                                   if (isset($item['title'])): ?>title="<?= $this->e($item['title']) ?>"<?php
                                endif; ?>>
                                    <?= $item['label'] ?>
                                    <?php
                                    if ($item['external'] ?? false): ?>
                                        <i class="material-icons sm ms-2">open_in_new</i>
                                    <?php
                                    endif; ?>
                                </a>
                            </li>
                        <?php endforeach; ?>
                    </ul>
                </div>
