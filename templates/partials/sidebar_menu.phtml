                endif; ?>
            </a>
            <?php
            if (!empty($category['items'])): ?>
                <div class="collapse pb-2" id="sidebar-submenu-<?= $category_id ?>">
                    <ul class="navdrawer-nav">
                        <?php
                        foreach ($category['items'] as $item_id => $item): ?>
