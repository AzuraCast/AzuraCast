$active ??= null;
?>
<ul class="navdrawer-nav">
    <?php
    foreach ($menu as $category_id => $category): ?>
        <li class="nav-item">
            <a class="nav-link <?= ($category['class'] ?? '') ?> <?php
            if ($active === $category_id): ?>active<?php
            endif; ?>"
