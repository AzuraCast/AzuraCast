{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "frontend/*"
      ],
      "!/*": [
        "*"
      ]
    },
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    /* Linting */
    "strict": false,
    "allowJs": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false
  },
  "include": [
    "frontend/**/*.ts",
    "frontend/**/*.d.ts",
    "frontend/**/*.tsx",
    "frontend/**/*.vue"
  ],
  "exclude": [
    "node_modules"
  ]
}
